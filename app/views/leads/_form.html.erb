<%= form_with(model: lead, local: true) do |form| %>
  <% if lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :lead_name, :class => "form-control", :placeholder => "Your Name", :required => "required" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :lead_email, :class => "form-control", :placeholder => "Your email", :required => "required" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :lead_phone, :class => "form-control", :placeholder => "Your phone number", :required => "required" %>
  </div>

    <div class="form-group">
      <label>Select a Suitable date</label>
                <div class='input-group date' id='datetimepicker1'>
                    
    <%= form.text_field :timeappoint, id: :lead_timeappoint, :class => "form-control", :type => "date", :required => "required" %>
                    <span class="input-group-addon">
                        <i class="fa fa-calendar-o" aria-hidden="true"></i>
                    </span>
                </div>
            </div>

  <div class="form-group">
   <label>Do you want to know something?</label>
    <%= form.text_area :message, id: :lead_message, :class => "form-control", :placeholder => "Your message for us" %>
  </div>

  <div class="form-group">
    <p style="text-align: right;"><%= form.submit "Book Appointment", :class => "btn btn-success" %></p>
  </div>

 
<% end %>
