<p id="notice"><%= notice %></p>

<h1>Homes</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Middlename</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th>Employmentstatus</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.firstname %></td>
        <td><%= home.lastname %></td>
        <td><%= home.middlename %></td>
        <td><%= home.email %></td>
        <td><%= home.phonenumber %></td>
        <td><%= home.employmentstatus %></td>
        <td><%= home.occupation %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

