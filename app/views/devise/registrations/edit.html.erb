<body style="background-color: #f2f2f2">


<div class="container">
<div class="row justify-content-center" style="margin-top: 80px;">
  <div class="col-md-6 col-md-offset-3">
<div class="holdformsi">
<h2 style="text-align: center; font-family: 'Poppins', sans-serif;">Edit your Profile Information.</h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
    <div class="form-group">
      <label>First name</label>
 <%= f.text_field :firstname, autofocus: true, :class => "form-control", :placeholder => "First name", :required => "true" %>
     </div>
    <div class="form-group">
      <label>Last name</label>
      <%= f.text_field :lastname, :class => "form-control", :placeholder => "Last name", :required => "true" %>
    </div>

<p style="margin-top: 10px;">Gender</p>
  <label for="male"><i style="color: #000;" class="fa fa-mars" aria-hidden="true"></i> <span style="margin-right: 5px;">Male</span></label>
  <input type="radio" name="user[gender]" id="user_gender" value="male" onclick="calculateTotal()" />

  <label for="fifteen_dollars"><i style="color: #000;" class="fa fa-venus" aria-hidden="true"></i> <span style="margin-right: 5px;">Female</span></label>
  <input type="radio" name="user[gender]" id="user_gender" value="female" onclick="calculateTotal()" />
<br>

   <div class="form-group">
    <label>House Number</label><br />
    <%= f.text_field :housenumber, autofocus: true, :class => "form-control", :placeholder => "House Number", :required => "true"  %>
  </div>

   <div class="form-group">
    <label>Phone Number</label><br />
    <%= f.text_field :phonenumber, autofocus: true, :class => "form-control", :placeholder => "Phone Number", :required => "true"  %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email", :required => "true"  %>
  </div>


 

  <div class="form-group">
    <br>
    <%= f.submit "Update your Profile", :class => "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
</div>

</div>


    
</body>
